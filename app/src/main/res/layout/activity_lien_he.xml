<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white"
    android:importantForAutofill="noExcludeDescendants"
    tools:ignore="UnusedAttribute">


    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <TextView
        android:id="@+id/diachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/app_logo"
        android:text=" Địa chỉ: 48 Đường Lê Duẩn, Hải Châu, Đà Nẵng "
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        />
    <TextView
        android:id="@+id/sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/diachi"
        android:text=" SDT: 0911692532"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sdt"
        android:text=" Email: luongngochaiqs@gmail.com"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/email"
        />

</androidx.constraintlayout.widget.ConstraintLayout>