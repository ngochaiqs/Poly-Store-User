<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white"
    android:importantForAutofill="noExcludeDescendants"
    android:layout_margin="5dp"
    tools:ignore="UnusedAttribute">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLienHe"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:title="Liên Hệ"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/app_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color_main"
        android:id="@+id/diachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/app_logo"
        android:text="48 Yên Bái, Hải Châu 1, Q. Hải Châu, Đà Nẵng "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left|center"
        android:drawableStart="@drawable/ic_baseline_location_on_30"
        android:drawablePadding="20dp"
        />
    <TextView
        android:id="@+id/sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/diachi"
        android:text="0911692532"
        android:drawablePadding="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_color_main"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_baseline_phone_30"
        />
    <TextView
        android:textColor="@color/text_color_main"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sdt"
        android:text="polystore@gmail.com"
        android:drawablePadding="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>